<%= form_with(model: [ @company, @company.attractives.build ], local: true) do |form| %>
    <div class="form-group">
      <%= form.label 'Nome' %><br>
      <%= form.text_field :name, :class=> 'form-control' %>
     </div>
    
     <div class="form-group">
      <%= form.label 'Endereco' %><br>
      <%= form.text_field :address, :class=> 'form-control' %>
     </div>
  
     <div class="form-group">
      <%= form.label 'Duracao em minutos' %><br>
      <%= form.number_field :duration, :class=> 'form-control' %>
     </div>
  
     <div class="form-group">
      <%= form.label 'Capacidade Maxima de Pessoas' %><br>
      <%= form.number_field :capacity, :class=> 'form-control' %>
     </div>
  
     <div class="form-group">
      <%= form.label 'Valor do Ingreco' %><br>
      <%= form.number_field :value, :class=> 'form-control' %>
     </div>
  
    <p>
      <%= form.submit "Criar Atrativo", :class=>'btn btn-default' %>
    </p>
  <% end %>