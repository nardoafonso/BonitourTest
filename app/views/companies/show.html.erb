<div class="container">
  <div class="row">
    <div class="col-md-6">
      <p>
        <strong>CNPJ:</strong>
        <%= @company.cnpj %>
      </p>
      
      <p>
        <strong>Razao Social:</strong>
        <%= @company.social_name %>
      </p>
      <p>
        <strong>Nome Fantasia:</strong>
        <%= @company.name %>
      </p>
      <p>
        <strong>Email:</strong>
        <%= @company.email %>
      </p>

      <div class="btn-group">
        <%= link_to 'Editar', edit_company_path(@company), :class=>"btn btn-primary" %>
        <%= link_to 'Voltar', companies_path, :class=>"btn btn-secondary" %>
      </div>
    </div>
    <div class="col-md-6">
      <h3>Atrativos</h3>
      <%= render @company.attractives %>
      
      <h3>Adicionar Atrativo:</h3>
      <%= render 'attractives/form' %>
    </div>
  </div>
</div>

